<h1>Listing shop_departments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_departments.each do |shop_department| %>
      <tr>
        <td><%= shop_department.name %></td>
        <td><%= link_to 'Show', shop_department %></td>
        <td><%= link_to 'Edit', edit_shop_department_path(shop_department) %></td>
        <td><%= link_to 'Destroy', shop_department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

