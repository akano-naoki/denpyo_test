<h1>Listing big_departments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @big_departments.each do |big_department| %>
      <tr>
        <td><%= big_department.name %></td>
        <td><%= big_department.code %></td>
        <td><%= big_department.description %></td>
        <td><%= link_to 'Show', big_department %></td>
        <td><%= link_to 'Edit', edit_big_department_path(big_department) %></td>
        <td><%= link_to 'Destroy', big_department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

